<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin - Expense Tracker</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        font-family: "Play", sans-serif;
      }
    </style>
  </head>

  <body
    class="bg-gradient-to-tr from-yellow-100 via-pink-100 to-purple-100 min-h-screen px-4 py-10"
  >
    <!-- Main Container -->
    <div
      class="max-w-full sm:max-w-xl md:max-w-3xl mx-auto bg-white rounded-3xl shadow-2xl p-6 sm:p-8 md:p-10"
    >
      <!-- Greeting -->
      <h2 class="text-3xl sm:text-4xl font-bold text-pink-600 mb-2">
        Welcome, <%= admin.userName %> 👋
      </h2>
      <p class="text-gray-600 mb-1 text-base sm:text-lg">
        Your email:
        <span class="text-purple-600 font-medium"><%= admin.email %></span>
      </p>
<p class="text-gray-600 mb-6 text-base capitalize sm:text-lg">
        Role:
        <span class="text-purple-600 font-medium"><%= admin.role %></span>
      </p>
      <!-- Balance Summary -->
      <div
        class="bg-gradient-to-r from-green-100 via-yellow-100 to-red-100 p-5 rounded-2xl shadow-md mb-6"
      >
        <h3
          class="text-xl sm:text-2xl font-bold text-gray-800 flex items-center gap-2"
        >
          💵 Balance: ₹<%= total %>
        </h3>
        <div
          class="flex flex-col sm:flex-row justify-between mt-3 gap-2 sm:gap-0"
        >
          <p class="text-green-700 font-semibold text-base sm:text-lg">
            Income: ₹<%= income %>
          </p>
          <p class="text-red-600 font-semibold text-base sm:text-lg">
            Expense: ₹<%= expense %>
          </p>
        </div>
      </div>

      <!-- Report Button -->
      <div class="mb-6">
        <a
          href="/download"
          target="_blank"
          class="inline-block w-full sm:w-auto text-center px-6 py-3 bg-gradient-to-r from-pink-500 via-purple-600 to-indigo-500 text-white text-lg font-bold rounded-full shadow-lg hover:from-pink-600 hover:via-purple-700 hover:to-indigo-600 transform hover:scale-105 transition-all duration-300"
        >
          📄 Download My Report
        </a>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row justify-between gap-4 mb-8">
        <a
          href="/add"
          class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg text-center text-sm sm:text-base shadow-md font-medium transition duration-200 flex-1"
        >
          ➕ Add Transaction
        </a>
        <a
          href="/logout"
          class="bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-lg text-center text-sm sm:text-base shadow-md font-medium transition duration-200 flex-1"
        >
          🚪 Logout
        </a>
      </div>

      <!-- Transaction History -->
      <h3 class="text-xl sm:text-2xl font-semibold text-purple-700 mb-4">
        Your Transactions
      </h3>

      <% if (transaction.length === 0) { %>
      <p class="text-gray-500 text-center italic">No transaction yet.</p>
      <% } else { %>
      <ul class="space-y-4 max-h-[320px] overflow-y-auto mb-10">
        <% transaction.forEach(function(txn) { %>
        <li
          class="flex justify-between items-center bg-gray-50 p-3 sm:p-4 rounded-xl shadow hover:shadow-md transition"
        >
          <div>
            <p class="font-semibold text-gray-800 text-sm sm:text-base">
              ₹<%= txn.amount %> - <%= txn.type %> - <%= txn.category %>
            </p>
            <p class="text-xs sm:text-sm text-gray-500">
              <%= txn.date.toDateString() %>
            </p>
          </div>
          <form action="/delete/<%= txn._id %>" method="POST" class="ml-4">
            <button
              type="submit"
              class="text-red-500 hover:text-red-700 text-lg sm:text-xl font-bold"
              aria-label="Delete transaction"
            >
              🗑️
            </button>
          </form>
        </li>
        <% }); %>
      </ul>
      <% } %>

      <!-- All Users Section -->
      <h3 class="text-xl sm:text-2xl font-semibold text-pink-600 mb-4">
        👥 All Users
      </h3>
      <% if (users.length === 0) { %>
      <p class="text-gray-500 text-center italic mb-6">No users found.</p>
      <% } else { %>
      <ul class="space-y-4 max-h-[300px] overflow-y-auto mb-10">
        <% users.forEach(function(user) { %>
        <li
          class="flex justify-between items-center bg-gray-50 p-3 sm:p-4 rounded-xl shadow hover:shadow-md transition"
        >
          <div>
            <p class="font-semibold text-gray-800 text-sm sm:text-base">
              👤 <%= user.userName %>
            </p>
            <p class="text-xs sm:text-sm text-gray-500"><%= user.email %></p>
            <p class="text-xs sm:text-sm text-gray-500"><%= user.email %></p>
          </div>
          <form action="/deleteUser/<%= user._id %>" method="POST" class="ml-4">
            <button
              type="submit"
              class="text-red-500 hover:text-red-700 text-lg sm:text-xl font-bold"
              aria-label="Delete user"
            >
              🗑️
            </button>
          </form>
        </li>
        <% }); %>
      </ul>
      <% } %>

      <!-- Pending Users Section -->
      <h3 class="text-xl sm:text-2xl font-semibold text-purple-700 mb-4">
        🕒 Pending Users
      </h3>
      <% if (pending.length === 0) { %>
      <p class="text-gray-500 text-center italic">No pending users.</p>
      <% } else { %>
      <ul class="space-y-4 max-h-[300px] overflow-y-auto">
        <% pending.forEach(function(p) { %>
        <li
          class="flex justify-between items-center bg-gray-50 p-3 sm:p-4 rounded-xl shadow hover:shadow-md transition"
        >
          <div>
            <p class="font-semibold text-gray-800 text-sm sm:text-base">
              🕒 <%= p.userName %>
            </p>
            <p class="text-xs sm:text-sm text-gray-500"><%= p.email %></p>
          </div>
          <div class="flex gap-2 ml-4">
            <form action="/approve/<%= p._id %>" method="POST">
              <button
                type="submit"
                class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded-lg text-sm shadow-md transition"
              >
                ✅ Approve
              </button>
            </form>
            <form action="/reject/<%= p._id %>" method="POST">
              <button
                type="submit"
                class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-lg text-sm shadow-md transition"
              >
                ❌ Reject
              </button>
            </form>
          </div>
        </li>
        <% }); %>
      </ul>
      <% } %>
    </div>
  </body>
</html>
